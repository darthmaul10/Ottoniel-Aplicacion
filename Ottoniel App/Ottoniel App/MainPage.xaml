<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ottoniel_App.MainPage">

    <StackLayout>
        <Button Text="Departamento" Clicked="Enviar_Departamento" Margin="50,10" 
                CornerRadius="10" Padding="20" BackgroundColor="#198754" TextColor="#fff"></Button>

        <Button Text="Puesto" Clicked="Enviar_Puesto" Margin="50,10"
                CornerRadius="10" Padding="20" BackgroundColor="#FFC107" TextColor="#fff"></Button>

        <Button Text="Empleado" Clicked="Enviar_Empleado" Margin="50,10"
                CornerRadius="10" Padding="20" BackgroundColor="#0DCAF0" TextColor="#fff"></Button>
        
        <Button Text="Telefono" Clicked="Enviar_Telefono" Margin="50,10"
                CornerRadius="10" Padding="20" BackgroundColor="#6C757D" TextColor="#fff"></Button>
    </StackLayout>

</ContentPage>
