<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ottoniel_App.Views.DepartamentoPost"
             Title="Agregar">
    <ContentPage.Content>

        <Grid>
            <Grid.RowDefinitions>

                <RowDefinition Height="200" ></RowDefinition>
                <RowDefinition Height="*" ></RowDefinition>
                <RowDefinition Height="*" ></RowDefinition>

            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                
            </Grid.ColumnDefinitions>

            <Label HorizontalOptions="Center" FontSize="20" TextColor="Green" Text="" x:Name="resultado" ></Label>
            <Entry Placeholder="Nombre Departamento " Keyboard="Text"  x:Name="nombreForm" Grid.Row="0" Grid.Column="0" />

            <Button Text="Grabar" Margin="50" BackgroundColor="#432874" 
                    TextColor="#fff" CornerRadius="10" Grid.Row="3" Grid.Column="0" Clicked="Button_Clicked"></Button>

        </Grid>

    </ContentPage.Content>
</ContentPage>